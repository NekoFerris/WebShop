@page
@model IndexModel
@{
    ViewData["Title"] = "FWI2 WebShop";
}

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h3>Willkommen im FWI2 Webshop</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form method="post">
                <legend class="row">Zuletzt hinzugefüge Artikel</legend>
                <div class="d-flex flex-row overflow-scroll" style="min-height:200px; max-height:200px">
                    @foreach(Artikel artikel in Model.LstArtikel)
                    {
                        <fieldset class="col" style="min-width:180px; max-width:180px">
                            <div class="row">
                                <legend class="col">@artikel.Bezeichnung</legend>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <span class="row">@artikel.Beschreibung</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group">
                                        <label class="input-group-text" for="menge">Anzahl</label>
                                        <input class="form-control" type="number" id="menge" name="menge" value="0" min="1" max="9999" step="1" required />
                                        <button class="btn btn-primary" type="submit">In den Warenkorb</button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </form>
        </div>
    </div>
</div>