@page
@model WebShop.Pages.Shared.loginModel
@{
}
<form name="login" method="post" class="row g-3" asp-page-handler="Login">
    <div class="col">
        <label for="email">E-mail</label>
        <input asp-for="email" required />
    </div>
    <div class="col">
        <label for="passwort">Passwort</label>
        <input asp-for="passwort" type="password" required />
    </div>
    <div class="col">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>